{
  "manifest_version": 3,
  "name": "Pidgin",
  "version": "1.0",
  "description": "Adds Twitter likes and bookmarks to Are.na channel",
  "action":{
    "default_icon":"icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "run_at": "document_start",
      "js": ["inject.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["script.js"],
      "matches": ["*://twitter.com/*"]
    }
  ],
  "permissions": [
    "webRequest",
    "identity",
    "storage"
  ],
  "host_permissions": ["https://dev.are.na/*", "https://api.are.na/*"]
}
